@model IEnumerable<DataAccess.Models.Product>

@{
    ViewData["Title"] = "Ürünler";

}
<h3>@ViewData["Title"]</h3>
<hr />
<form>
<button asp-action="CreateOrEdit" asp-controller="Product" class="btn btn-primary mb-3">Ürün Ekle</button>
<table class="table table-responsive table-bordered table-hover">
    <thead>
        <tr class="table-active">
            <th>
                @Html.DisplayNameFor(model=>model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.Quantity)
            </th>
            <th>Action</th>
          

        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.ProductName</td>
                    <td>@product.Price</td>
                    <td>@product.Quantity</td>
                        <td style="width: 150px;">
                            <div class="btn-group btn-group-sm">
                            <a asp-controller="Product" asp-action="CreateOrEdit" asp-route-id="@product.Id" class="btn btn-success">Güncelle</a>
                                <span style="margin:5px;"></span>
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Sil</a>
                               
                            </div>
                        </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">
                    <div>Ürün bulunamadı</div>
                </td>
            </tr>
        }
    </tbody>
</table>
</form>